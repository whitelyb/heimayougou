<view class="detail_swiper">
  <swiper autoplay circular indicator-dots>
    <swiper-item
    wx:for="{{ goodsObj.pics }}"
    wx:key="pics_id"
    bindtap="handlePreviewImage"
    data-url="{{ item.pics_mid }}">
    <image mode="widthFix" src="{{ item.pics_mid }}"></image>   
    </swiper-item>
      
  </swiper>
    
</view>
<view class="goods_price">￥{{ goodsObj.goods_price }}</view>
<view class="goods_name_raw">
  <view class="goods_name">{{ goodsObj.goods_name }} </view>
  <view class="goods_collect">
  <text class="iconfont {{ isCollect ? 'icon-shoucang2' : 'icon-shoucang' }}" bindtap="handleCollect"></text>
  <view class="collect_text">收藏</view>
  </view>
</view>

<view class="goods_info">
  <view class="goods_info_title">图文详情</view>
  <view class="goods_info_content">
  <!--富文本标签 -->
    <rich-text nodes="{{ goodsObj.goods_introduce }}"></rich-text>
      
  </view>
</view>

<view class="btm_tool">
  <view class="tool_item">
    <view class="iconfont icon-kefu"></view>
    <view>客服 </view>   
    <button open-type="contact"></button>
  </view> 
  <view class="tool_item">
    <view class="iconfont icon-share1"></view>
    <view>分享 </view>  
    <button open-type="share"></button> 
  </view> 
  <navigator url="/pages/cart/cart" open-type="switchTab" class="tool_item">
    <view class="iconfont icon-gouwuchekong"></view>
    <view>购物车 </view>   
  </navigator> 
  <view class="tool_item btn_cart" bindtap="handleCartAdd">
   加入购物车  
  </view>
   <view class="tool_item btn_buy">
    立即购买
  </view>
</view>
